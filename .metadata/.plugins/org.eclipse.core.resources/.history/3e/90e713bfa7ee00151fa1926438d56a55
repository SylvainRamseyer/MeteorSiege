
package ch.hearc.p2.Items.experimental;

import org.newdawn.slick.Image;
import org.newdawn.slick.geom.Circle;

import ch.hearc.p2.tools.Tools;

public class Turret extends Circle implements Runnable
	{
	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public Turret(float centerPointX, float centerPointY, float radius)
		{
		super(centerPointX, centerPointY, radius);
		power = 1;
		speed = 1;
		rateFire = 1;
		direction = 0;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	@Override
	public void run()
		{

		}

	private Projectile shoot()
		{
		return new Projectile(this.getCenterX(), rateFire, 1, 1, Tools.getXFromAngle(direction)*speed, Tools.getYFromAngle(direction)*speed)
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/
	public void setDirection(float angle)
		{
		direction = angle;
		}

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/
	public float getDirection()
		{
			return direction;
		}
	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/


	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	private int power;
	private int speed;
	private float rateFire;
	private float direction; // that an angle
	public static final Image image = Tools.loadImage("res/Parts/gun00.png") ;

	}

