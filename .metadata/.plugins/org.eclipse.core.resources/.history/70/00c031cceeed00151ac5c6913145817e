
package ch.hearc.p2.tools;

public class Tools
	{


	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	public static double getAngle(double x, double y)
		{
		double angle = 0;
		if ((x != 0) && (y != 0))
			{
			angle = Math.atan(Math.abs(x / y));
			if (x < 0 && y >= 0)
				{
				angle += Math.PI * 1.5;
				}
			else if (x <= 0 && y < 0)
				{
				angle += Math.PI;
				}
			else if (y <= 0)
				{
				angle += Math.PI / 2;
				}
			}

		return angle;
		}

	public static float getAngle(float x, float y)
		{
		return (float)getAngle((double)x, (double)y);
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	}
