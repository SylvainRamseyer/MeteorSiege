
package ch.hearc.p2.tools;



public class UseTools
	{
	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public static void main(String[] args)
		{
		main();
		}

	public static void main()
		{
		System.out.println("angle 0");
		System.out.println(Tools.getAngle(0, 20));
		System.out.println("angle 45");
		System.out.println(Tools.getAngle(20, 20));
		System.out.println("angle 90");
		System.out.println(Tools.getAngle(20, 0));
		System.out.println("angle 135");
		System.out.println(Tools.getAngle(20, -20));
		System.out.println("angle 180");
		System.out.println(Tools.getAngle(0, -20));
		System.out.println("angle 225");
		System.out.println(Tools.getAngle(-20, -20));
		System.out.println("angle 270");
		System.out.println(Tools.getAngle(-20, 0));
		System.out.println("angle 315");
		System.out.println(Tools.getAngle(-20, 20));
		System.out.println("angle 0");
		System.out.println(Tools.getAngle(0, 0));
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	}

